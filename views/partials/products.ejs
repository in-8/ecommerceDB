<!-- update index.js dom ui if you change ui here  -->
<div  class="container-fluid mt-4">
    <div id="parent" class="row mt-2 g-3">
        <% for(let i=0;i<numProds;i++){ %>
        <div class="col-xs-12 col-md-3 mb-3 mb-sm-0 mh-25 shadow">
          <div class="card">
                <img src="<%= products[i].image %>" data-bs-toggle="modal" data-bs-target="#<%=products[i].id %>" class="card-img-top pt-3" height="250vh">
                <div class="card-body">
                  <h5 class="card-title"><%= products[i].name %> </h5>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><%= products[i].price %></li>
                </ul>
                <% if(products[i].isavailable){%>
                <div class="card-body d-flex justify-content-around">
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%=products[i].id %>">
                    View Details
                  </button>
                  <button onclick="addToCart(this,`<%=products[i].id %>`)"  class="btn btn-success">Add to cart</button>
                </div>
                <% }else{%>  
                  <div class="card-body d-flex justify-content-around bg-danger">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%=products[i].id %>">
                      View Details
                    </button>
                    <button class="btn btn-warning">out of stock</button>
                  </div>
                <% }%>         
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="<%= products[i].id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel"><%= products[i].name %></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="container-fluid">
                  <div class="col-12">
                    <img src="<%= products[i].image %>" class="card-img-top" alt="...">
                  </div>
                  <div class="col-12">
                    <b><%= products[i].price %></b>
                  </div>
                  <div class="col-12">
                    <%= products[i].details %>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% }%>
    </div>
</div>